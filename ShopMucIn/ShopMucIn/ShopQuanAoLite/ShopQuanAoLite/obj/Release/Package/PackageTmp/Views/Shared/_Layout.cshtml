<body>
    <!-- *** TOPBAR ***
    _________________________________________________________ -->
    <div id="top">
        @{
            int check = 0;
            var session = (ShopQuanAoLite.Models.KhachHang)Session["Taikhoan"];
            <div class="container">
                <div class="col-md-12" data-animate="fadeInDown">
                    <ul class="menu">
                        @if (session != null)
                        {
                            <li><a href="#" data-toggle="modal">Xin chào @session.HoTen</a></li>
                            <li><a href="/NguoiDung/LogOut" data-toggle="modal">Đăng xuất</a></li>
                            <li><a href="/NguoiDung/Profile">Thông tin tài khoản</a></li>
                            check = 1;
                        }
                        else
                        {
                            <li>
                                <a href="#" data-toggle="modal" data-target="#login-modal">Đăng nhập</a>
                            </li>
                            <li>
                                <a href="/NguoiDung/DangKy">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            if (check == 0)
            {
                <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
                    <div class="modal-dialog modal-sm">

                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="Login">Đăng nhập</h4>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
                                {
                                    Html.ValidationSummary(true, "", new { @class = "text-danger" });
                                    <div class="form-group">
                                        <input type="text" id="tendangnhap" name="TenDangNhap" class="form-control" autofocus="autofocus" placeholder="Tên đăng nhập" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="matkhau" name="MatKhau" class="form-control" placeholder="Mật khẩu" />
                                    </div>

                                    <p class="text-center">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Đăng nhập</button>
                                    </p>
                                }


                                <p class="text-center text-muted">Bạn chưa đăng ký?</p>
                                <p class="text-center text-muted"><a href="/NguoiDung/Dangky"><strong>Đăng ký ngay</strong></a>! Đăng ký đơn giản chỉ trong 1 phút và bạn có thể tiến hành đặt hàng.</p>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- *** TOP BAR END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->
    <!--/.navbar-header -->
    @{
        Html.RenderAction("NavBar", "Home");
    }
    <!--/.nav-collapse -->
    <!--/.nav-collapse -->
    <!-- /.container -->
    <!-- /#navbar -->
    <!-- *** NAVBAR END *** -->


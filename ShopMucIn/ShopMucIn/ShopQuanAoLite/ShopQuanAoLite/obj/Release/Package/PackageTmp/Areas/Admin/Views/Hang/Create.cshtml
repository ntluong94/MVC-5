@model ShopQuanAoLite.Models.Hang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon white edit"></i><span class="break"></span>Thêm hãng </h2>
            <div class="box-icon">
                <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
        @using (Html.BeginForm("Create", "Hang", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label" for="typeahead">Tên hãng</label>
                            <div class="controls">
                                @Html.EditorFor(model => model.TenH, new { @class = "span6 typeahead" })
                                @Html.ValidationMessageFor(model => model.TenH)
                            </div>
                            <div class="control-group">
                                <label class="control-label">Ảnh bìa</label>
                                <div class="controls">
                                    <input type="file" name="fileUpload" />
                                </div>
                            </div>
                            <p style="color:red;padding-left: 180px;">@ViewBag.ThongBao</p>
                        </div>
                        <div class="form-actions">
                            <a style="background-color:#702222; text-decoration: none; color: #fff" class="btn" href="@Url.Action("Index", "Hang")">Back to list</a>
                            <button type="submit" class="btn btn-primary" name="btnSubmit">Submit</button>
                            <button type="reset" class="btn">Reset</button>
                        </div>
                    </fieldset>
                </div>
            }


        </div>
    </div><!--/span-->
</div><!--/row-->

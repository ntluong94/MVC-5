
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Thông tin tài khoản</h2>
            <div class="box-icon">
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class='table table-striped table-bordered bootstrap-datatable '>
                <tbody>
                    @{

                        var session = (ShopQuanAoLite.Areas.Admin.Models.AdminViewModel)Session["Taikhoanadmin"];
                        if (session != null)
                        {
                            <tr>
                                <td>Quản trị viên</td>
                            </tr>
                            <tr>
                                <td>Tên đăng nhập</td>
                                <td>@session.TaiKhoan</td>
                            </tr>
                            <tr>
                                <td>Họ tên</td>
                                <td>@session.TenAdmin</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@session.Email</td>
                            </tr>
                            <tr>
                                <td>Mật khẩu</td>
                                <td><a href="~/Admin/ProfileAdmin/EditPassword/@session.MaAdmin">Thay đổi mật khẩu</a></td>
                            </tr>
                            <tr>
                                <td>Chức vụ</td>
                                @if (@session.Phanloai)
                                {
                                    <td>Quản trị viên cao cấp</td>
                                }
                                else
                                {
                                    <td>Quản trị viên</td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div>






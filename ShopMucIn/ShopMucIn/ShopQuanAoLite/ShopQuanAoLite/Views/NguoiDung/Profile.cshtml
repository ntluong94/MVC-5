@model ShopQuanAoLite.Models.KhachHang
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu_Profile
{
    <div class="panel panel-default sidebar-menu">

        <div class="panel-heading">
            <h3 class="panel-title">Tài khoản</h3>
        </div>

        <div class="panel-body">
            <ul class="nav nav-pills nav-stacked category-menu">
                <li>
                    <a href="/Profile">Thay đổi Thông tin</a>

                </li>
                <li>
                    <a href="/Profile/LichSu_MuaHang">Lịch sử mua hàng</a>
                </li>

            </ul>

        </div>
    </div>
}


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Thông tin tài khoản</h2>
            <div class="box-icon">
                <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class='table table-striped table-bordered bootstrap-datatable '>
                <tbody>
                    @{
                        var session = (ShopQuanAoLite.Models.KhachHang)Session["Taikhoan"];
                        if (session != null)
                        {
                            <tr>
                                <td>Tên đăng nhập</td>
                                <td>@session.TenDangNhap</td>
                            </tr>
                            <tr>
                                <td>Họ tên</td>
                                <td>@session.HoTen</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@session.Email</td>
                            </tr>
                            <tr>
                                <td>Địa chỉ</td>
                                <td>@session.DiaChi</td>
                            </tr>
                            <tr>
                                <td>Số điện thoại</td>
                                <td>@session.SoDienThoai</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div><!--/span-->
</div>

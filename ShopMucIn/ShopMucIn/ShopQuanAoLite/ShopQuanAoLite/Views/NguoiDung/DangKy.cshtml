@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Easy Binary Forms Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link rel="stylesheet" href="~/Assets/Client/easyregister/css/style.css" type="text/css" media="all">
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Text+Me+One' rel='stylesheet' type='text/css'>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- //web font -->
</head>
<body>

    <h1>TÀI KHOẢN</h1>
    <div class="main-agileits">
        <!--form-stars-here-->
        <div class="left-form-w3-agile">
            <h2>ĐĂNG NHẬP</h2>
            <form action="/NguoiDung/DangNhap" method="post">
                <p>Tên tài khoản</p>
                <input type="text" class="text" name="TenDangNhap" placeholder="ltink123" required="" />
                <p>Mật khẩu</p>
                <input type="password" class="password" name="MatKhau" placeholder="******" required="" />
                <div class="wthree-text">
                    <ul>
                        <li>
                            <label class="anim">
                                <input type="checkbox" class="checkbox">
                                <span> Remember me ?</span>
                            </label>
                        </li>
                    </ul>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="Đăng nhập">
            </form>
        </div>
        <!--//form-ends-here-->
        <div class="right-map-w3-agile">
            <h2>ĐĂNG KÝ</h2>
            <form action="/NguoiDung/DangKY" method="post">
                <div class="inputs-w3ls">
                    <p>Tên đăng nhập</p>
                    <input type="text" name="TenDangNhap" placeholder="Ltink123" required="">
                </div>
                <div class="inputs-w3ls">
                    <p>Họ tên</p>
                    <input type="text" name="HoTen" placeholder="Lâm Chí Chung" required="">
                </div>
                <div class="inputs-w3ls">
                    <p>Email</p>
                    <input type="email" class="email" name="Email" placeholder="ltink823@gmail.com" required="" />
                </div>
                <div class="inputs-w3ls">
                    <p>Địa chỉ</p>
                    <input type="text" name="DiaChi" placeholder="Địa chỉ nhận hàng của bạn" required="">
                </div>
                <div class="inputs-w3ls">
                    <p>Số điện thoại</p>
                    <input type="text" name="SoDienThoai" placeholder="0975xxxxx" required="">
                </div>
                <div class="inputs-w3ls">
                    <p>Mật khẩu</p>
                    <input type="password" class="password" name="Matkhau" placeholder="******" required="" />
                </div>
                <p style="color:red; text-align:center">@ViewBag.ThongBao</p>
                <input class="register" type="submit" value="Đăng ký">
            </form>
        </div>
        <div class="clear"></div>
    </div>
    <!-- copyright -->
    <div class="copyright w3-agile">
        <p> 2018 TL-Ink.| <a href="~/Home/" target="_blank">TRANG CHỦ</a></p>
    </div>
    <!-- //copyright -->
</body>
</html>
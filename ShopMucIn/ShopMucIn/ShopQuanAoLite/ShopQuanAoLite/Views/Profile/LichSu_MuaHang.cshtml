@model List<ShopQuanAoLite.Models.HoaDon>

@{
    ViewBag.Title = "LichSu_MuaHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu_Profile
{
    <div class="panel panel-default sidebar-menu">

        <div class="panel-heading">
            <h3 class="panel-title">Tài khoản</h3>
        </div>

        <div class="panel-body">
            <ul class="nav nav-pills nav-stacked category-menu">
                <li>
                    <a href="/Profile">Thay đổi Thông tin</a>

                </li>
                <li>
                    <a href="/Profile/LichSu_MuaHang">Lịch sử mua hàng</a>
                </li>

            </ul>

        </div>
    </div>
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>Lịch sử mua hàng</h2>
        </div>
        <div class="scrollmenu">
            <table class='table'>
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt hàng</th>
                        <th>Ghi chú</th>
                        <th>Tên người mua</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.MaHD</td>
                        <td>@item.NgayLapHD</td>
                        @if (@item.GhiChu.Length > 0)
                        {
                        <td>@item.GhiChu</td>
                        }
                        else
                        {
                        <td>Không có</td>
                        }
                        <td>@item.KhachHang.HoTen</td>
                        <td><a href="/Profile/ChiTiet_LichSu_MuaHang/@item.MaHD" style="background: #4fbfa8; padding: 5px 10px; color: #fff;" class="btn">Chi tiết</a></td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr></tr>
                </tfoot>
            </table>
        </div>
        </div><!--/span-->
</div>

